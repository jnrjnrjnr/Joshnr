<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JNR</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Press+Start+2P">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }
        body[data-theme="dark"] {
            background-color: black;
            color: white;
        }
        body[data-theme="light"] {
            background-color: white;
            color: black;
        }
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center; /* Initially centered */
            font-family: 'Press Start 2P', monospace;
            font-size: 1.5em;
            position: relative;
            transition: background-color 1s;
        }
        #content {
            cursor: pointer;
            animation: blink-animation 1.5s linear infinite;
        }
        /* Define the blink animation */
        @keyframes blink-animation {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0;
            }
        }
        /* Toggle Button */
        #toggleButton {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 22.5px;
            height: 22.5px;
            border-radius: 50%;
            cursor: pointer;
        }
        body[data-theme="dark"] #toggleButton {
            background-color: white;
        }
        body[data-theme="light"] #toggleButton {
            background-color: black;
        }
    </style>
    <script>
        function toggleTheme() {
            const body = document.body;
            if (body.getAttribute("data-theme") === "dark") {
                body.setAttribute("data-theme", "light");
            } else {
                body.setAttribute("data-theme", "dark");
            }
        }

        function loadHomePage() {
            const content = document.getElementById('content');
            const body = document.body;
            content.style.animation = 'none';  // Remove blinking animation
            content.innerHTML = 'JOSH NETTO-ROSEN';
            content.style.cursor = 'default'; // Remove the hand pointer
            content.style.fontSize = '0.5em'; // Half the font size
            body.style.justifyContent = 'flex-start'; // Align to the top
            body.style.paddingTop = '20px'; // Add padding to the top
            content.removeEventListener('click', loadHomePage); // Remove the click event listener
        }
    </script>
</head>

<body data-theme="dark">
    <!-- Toggle Button -->
    <div id="toggleButton" onclick="toggleTheme()"></div>

    <!-- The content of your page -->
    <div id="content" onclick="loadHomePage()">
        JOSH NETTO-ROSEN
    </div>
</body>

</html>
